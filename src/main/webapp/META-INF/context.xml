<Context path="/portal-console" docBase="./portal-console" debug="1" reloadable="false">

    <Environment name="logActiveFileOutput" value="true" type="java.lang.String" override="false" />
    <Environment name="logName" value="/usr/local/tomcat//logs/portal-console.log" type="java.lang.String" override="false" />
    <Environment name="logFileRotatePattern" value="/usr/local/tomcat//logs/portal-console_logs/portal-console-%i.log.gz" type="java.lang.String" override="false" />
    <Environment name="logLevel" value="WARN" type="java.lang.String" override="false" />
